#ifndef BALLS_H_
#define BALLS_H_


class Balls : public Module {
private:
	bool activationState = false;
	bool activationTicks = 0;
public:
	void OperatorControl(){
		bool shootBtn = hw::stick->GetRawButton(3);
		if(shootBtn){
			activationState = true;
			activationTicks = 0;
		}
		if(activationState){
			activationTicks ++;
			if(activationTicks > 50){
				activationState = false;
			}
		}
	}
};
#endif /* BALLS_H_ */
