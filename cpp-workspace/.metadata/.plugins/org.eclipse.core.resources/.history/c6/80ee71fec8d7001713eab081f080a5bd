/*
 * Grabber.h
 */


#ifndef GRABBER_H_
#define GRABBER_H_

class Grabber : public Module {
	 void OperatorControl(){
#ifdef CONTROLLER_ALT_1
			bool leftTrigger = hw::stick->GetRawButton(5);
			bool leftBumper  = hw::stick->GetRawButton(3);
#else
			bool leftTrigger = hw::stick->GetRawButton(7);
			bool leftBumper  = hw::stick->GetRawButton(5);
#endif

			if(leftBumper){
				hw::grabServ->SetAngle(120);
			} else if(leftTrigger){
					hw::grabServ->SetAngle(-120);
			} else{
				hw::grabServ->SetAngle(0);
			}

	}

	void Autonomous(){



	}

};

#endif /* GRABBER_H_ */



